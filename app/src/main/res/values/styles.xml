<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="guide_line_horizontal_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="guide_line_vertical_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="material_text_field">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MyTabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>