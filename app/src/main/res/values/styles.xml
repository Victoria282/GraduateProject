<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="guide_line_horizontal_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="guide_line_vertical_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="material_text_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="helperTextTextColor">@color/error_color</item>
    </style>

    <style name="MyTabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="categoriesExpense">
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconSize">32dp</item>
        <item name="iconPadding">12dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="tittleStyle">
        <item name="fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color_icon</item>
    </style>

    <style name="pieChartCardStyle">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_condensed_light</item>
    </style>

    <style name="Widget.GraduateProject.AppWidget.Container" parent="android:Widget">
        <item name="android:background">#80706F6F</item>
    </style>

    <style name="Widget.GraduateProject.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>